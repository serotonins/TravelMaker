<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When button is selected -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/main_color"/> <!-- Selected state color -->
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/text_main_color"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/> <!-- Default state color -->
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/text_main_color"/>
        </shape>
    </item>
</selector>