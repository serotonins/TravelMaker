<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.Title" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text.InTheBtn" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>



    <!-- Sign Chip -->
    <style name="chipRegular" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- map Chip -->
    <style name="chipRegular.map" parent="chipRegular">
        <item name="chipBackgroundColor">@color/text_main_color</item>
    </style>

    <style name="Text.Regular" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!-- TextInputLayout hint style -->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 이전, 다음 TextView styles -->
    <style name="Text.Regular20" parent="Text.Regular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Regular20.gray" parent="Text.Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- EditText에 입력될 값-->
    <style name="Text.Input" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:hint" />
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Support" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:hint" />
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Support.Color" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:hint" />
        <item name="android:textColor">@color/text_main_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <!-- 다른 필요한 스타일 속성들을 여기에 추가 -->
    </style>

    <!-- TabLayout Text 스타일 정의-->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <!-- 가로 스크롤 바 색상 변경-->
    <style name="CustomScrollbarHorizontalScrollView">
        <item name="android:scrollbarThumbHorizontal">@drawable/background_drawable_scroll</item>
    </style>

    <!-- 전체화면 다이얼로그-->
    <style name="AppTheme.FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- 커스텀 스피너 스타일 -->
    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor"> false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:background">@drawable/background_spinner</item>
    </style>

    <style name="custom_material_textButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_main_color</item>
    </style>

    <!-- BottomSheetLayout -->

        <!-- Style for Buttons -->
        <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- Style for Text Views -->
        <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- Style for Dividers -->
        <style name="DividerStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">1dp</item>
            <item name="android:background">?android:attr/listDivider</item>
        </style>

    <!-- BottomSheetLayout -->
</resources>