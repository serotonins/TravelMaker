<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/dialog_title_profile"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="bottom|end"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    님의 신뢰도입니다."/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/dialog_profile_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/img_trust_4"
            />

        <Button
            android:text="예"
            android:id="@+id/dialog_content_yes"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:text="취소"
            android:visibility="gone"
            android:background="@drawable/rounded_et_background_15dp"
            android:id="@+id/dialog_content_no"
            android:layout_width="300dp"
            android:layout_height="40dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/dialog_content_profile"
            android:text="최근 모임"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>
        <include layout="@layout/click_event_profile_trip_list"/>
        <include layout="@layout/click_event_profile_trip_list1"/>
        <include layout="@layout/click_event_profile_trip_list"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
